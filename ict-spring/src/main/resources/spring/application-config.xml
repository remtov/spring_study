<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- Uncomment and add your base-package here: <context:component-scan base-package="org.springframework.samples.service"/> -->
	<!-- /dbcp2가 가지고있는/ 커넥션맺을때 URL ID PWD 데이터 소스에게 입력해준다 -->

	<bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
		<!-- 세터주입 (생성자주입방식도있다.) -->
		<property name="driverClassName" value="oracle.jdbc.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
		<property name="username" value="ictu" />
		<property name="password" value="12345678" />
		<!-- url:jdbc:oracle:thin:@localhost:1521:xe user:ictu pwd:12345678 driver:oracle.jdbc.driver.OracleDriver -->
	</bean>



	<!-- 세션생성/ 스레드에 안전하지않다. -->
	<bean id="sqlSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation"	value="classpath:mybatis/mybatis-config.xml" />
		<property name="mapperLocations" value="classpath:mybatis/xml/*.xml" /><!-- 나중에 많은 xml이 만들어지는데 한번에 세팅할수있다. -->
	</bean>
	
	
	<bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
			<constructor-arg index="0" ref="sqlSessionFactoryBean" />
	</bean>
	<!-- 세션템플릿 / 스레드에 안전하다. -->
</beans>

<!-- close하지 않을 경우 반환하지 않을경우 반환할때까지 기다린다. 언젠가는 먹통이된다. 복구하는 방법은 서버를 내렸다 꺼야한다. 
	커넥션의 멕시멈이 100이다. 커넥션을 늘리면 되지만 한계가있다. 클로즈 로직은 중요하다. -->